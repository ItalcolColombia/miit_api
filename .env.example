# ==============================================================================
# MIIT API - Environment Variables Example
# ==============================================================================
# Copy this file to .env and fill in the actual values
# NEVER commit the .env file to version control!
# ==============================================================================

# ==============================================================================
# API Configuration
# ==============================================================================
API_NAME=MIIT_API
API_HOST=0.0.0.0
API_PORT=8000
API_V1_STR=v1
API_VERSION=0.0.45
API_LOG_LEVEL=debug
APP_LOG_DIR=/var/www/metalteco/log/miit_api_logs/

# ==============================================================================
# API Super User (REQUIRED - SENSITIVE)
# ==============================================================================
# Administrator username
API_USER_ADMINISTRATOR=administrator
# Bcrypt hashed password for the administrator
# Generate with: python -c "import bcrypt; print(bcrypt.hashpw(b'your_password', bcrypt.gensalt()).decode())"
API_PASSWORD_ADMINISTRATOR='$2b$12$YOUR_BCRYPT_HASHED_PASSWORD_HERE'

# ==============================================================================
# Database Configuration (REQUIRED - SENSITIVE)
# ==============================================================================
DB_TYPE=PostgreSQL
DB_NAME=your_database_name
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password

# ==============================================================================
# Email Configuration (OPTIONAL)
# ==============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password

# ==============================================================================
# JWT Configuration (REQUIRED - SENSITIVE)
# ==============================================================================
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_super_secret_jwt_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=40
JWT_REFRESH_TOKEN_EXPIRE_DAYS=1
JWT_AUDIENCE=MIIT-API
JWT_ISSUER=MIIT-API-Authentication

# ==============================================================================
# Encryption Configuration (REQUIRED - SENSITIVE)
# ==============================================================================
# Generate a Fernet key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_encryption_key_here

# ==============================================================================
# TurboGraneles External API (OPTIONAL)
# ==============================================================================
TG_API_URL=http://your-external-api-url.com
TG_API_USER=your_api_user@example.com
TG_API_PASS=your_api_password

# ==============================================================================
# PGAdmin Configuration (for Docker Compose - OPTIONAL)
# ==============================================================================
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password
PGADMIN_LISTEN_PORT=80

